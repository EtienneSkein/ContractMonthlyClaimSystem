@model ContractMonthlyClaimSystem.Models.ClaimSubmission

@{
    ViewData["Title"] = "Submit Monthly Claim";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <!-- Validation summary -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            Please correct the errors below and resubmit the form.
        </div>
    }

    <!-- Form for submitting claim -->
    <form asp-action="Submit" method="post" enctype="multipart/form-data" class="form-horizontal">
        <div class="form-group row mb-3">
            <label asp-for="ClaimDate" class="col-sm-2 col-form-label">Date of Claim</label>
            <div class="col-sm-10">
                <input asp-for="ClaimDate" class="form-control" type="date" />
                <span asp-validation-for="ClaimDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="HoursWorked" class="col-sm-2 col-form-label">Hours Worked</label>
            <div class="col-sm-10">
                <input asp-for="HoursWorked" class="form-control" type="number" />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="SupportingDocument" class="col-sm-2 col-form-label">Upload Supporting Document</label>
            <div class="col-sm-10">
                <input asp-for="SupportingDocument" class="form-control" type="file" />
                <span asp-validation-for="SupportingDocument" class="text-danger"></span>
            </div>
        </div>

        <!-- Submit button -->
        <div class="form-group row">
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary btn-lg">Submit Claim</button>
            </div>
        </div>
    </form>

    <!-- Button to go to Manage Claims page -->
    <div class="text-center mt-4">
        <a href="/Claims/ManageClaims" class="btn btn-primary">Go to Manage Claims</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
